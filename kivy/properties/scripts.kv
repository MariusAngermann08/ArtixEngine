<ScriptsLayout>:
    scripts_grid: property_scripts_grid

    canvas.before:
        Color:
            rgba: 60/255,60/255,60/255,1
        Rectangle:
            pos: self.pos
            size: self.size
    size_hint_y: None
    height: 180

    #headbar
    FloatLayout:
        size_hint: 1,0.16
        pos_hint: {"x":0,"top":1}
        canvas.before:
            Color:
                rgba: 74/255, 100/255, 143/255,1
            Rectangle:
                pos: self.pos
                size: self.size
        Label:
            text: "Scripts"
            pos_hint: {"x":0,"y":0}
            size_hint: 1,1
            font_size: 15
    
    ScrollView:
        size_hint: 0.5,0.82
        pos_hint: {"x":0,"y":0}
        canvas.before:
            Color:
                rgba: 80/255, 80/255, 80/255,1
            Rectangle:
                pos: self.pos
                size: self.size
        
        GridLayout:
            id: property_scripts_grid
            size_hint_y: None
            cols: 1
            spacing: 0
            height: self.minimum_height
    
    Button:
        text: "Delete"
        size_hint: 0.5,0.2
        pos_hint: {"x":0.5,"top":0.82}
        background_color: 186/255, 93/255, 86/255, 1
        on_press: root.remove_script()
    
    Button:
        text: "Add"
        size_hint: 0.5,0.62
        pos_hint: {"x":0.5,"y":0}
        on_press: root.add_script()
